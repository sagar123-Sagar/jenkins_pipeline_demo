pipeline {
    agent any

    stages {
        stage('Clone GitHub Repo') {
            steps {
                git url: 'https://github.com/sagar123-Sagar/jenkins_pipeline_demo.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat '"C:\\Users\\Sagar\\AppData\\Local\\Programs\\Python\\Python310\\python.exe" -m pip install -r requirnment.txt'
            }
        }

        stage('Run Python Script') {
            steps {
                bat '"C:\\Users\\Sagar\\AppData\\Local\\Programs\\Python\\Python310\\python.exe" main.py'
            }
        }
    }
}
