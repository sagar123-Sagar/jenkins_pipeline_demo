pipeline {
    agent any

    stages {
        stage('Clone GitHub Repo') {
            steps {
                git 'https://github.com/sagar123-Sagar/jenkins_pipeline_demo.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Run Python Script') {
            steps {
                bat 'python main.py'
            }
        }
    }
}
